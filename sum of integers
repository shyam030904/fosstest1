import java.util.*;
public class sumOfInteger {
    public static void main(String[] args) {
        System.out.println("HEllo Mathematicians!!!!!!!!!!!");
        Scanner inp = new Scanner(System.in);
        System.out.print("Enter the Sum:");
        int num = inp.nextInt();
        int sum=sum(num);
        System.out.println("the sum of integrs of number"+num+"is "+sum);
    }
    public static int sum(int num){
        int sum=0;
        while(num>0){
            sum+=num%10;
            num /=10;
        }
     return sum;
    }


}
